{% extends 'base.html.twig' %}

{% block title %}Settings{% endblock %}

{% block body %}
<div class="container animate-fade-in">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="fas fa-cog"></i> Settings</h4>
                </div>
                <div class="card-body">
                    {% for message in app.flashes('success') %}
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle"></i> {{ message }}
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    {% endfor %}

                    <form method="post">
                        <div class="mb-4">
                            <h5><i class="fas fa-palette"></i> Appearance</h5>
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" id="darkMode" name="dark_mode"
                                       {{ dark_mode ? 'checked' : '' }}>
                                <label class="form-check-label" for="darkMode">
                                    <i class="fas fa-moon"></i> Enable Dark Mode
                                </label>
                                <small class="form-text text-muted">
                                    Toggle between light and dark themes for the application.
                                </small>
                            </div>
                        </div>

                        <div class="border-top pt-3">
                            <button type="submit" class="btn btn-custom">
                                <i class="fas fa-save"></i> Save Settings
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}