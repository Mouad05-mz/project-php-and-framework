{% extends 'base.html.twig' %}

{% block title %}{{ campaign.title }}{% endblock %}

{% block body %}
<div class="container animate-fade-in">
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h4 class="mb-0"><i class="fas fa-bullhorn"></i> {{ campaign.title }}</h4>
                    <div>
                        <a href="{{ path('app_campaign_edit', {'id': campaign.id}) }}" class="btn btn-light btn-sm">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                        {{ include('campaign/_delete_form.html.twig') }}
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h5><i class="fas fa-info-circle"></i> Campaign Details</h5>
                            <p><strong>Description:</strong> {{ campaign.description }}</p>
                            <p><strong>Status:</strong>
                                <span class="badge bg-{{ campaign.status == 'active' ? 'success' : 'secondary' }}">
                                    {{ campaign.status|title }}
                                </span>
                            </p>
                            <p><strong>Start Date:</strong> {{ campaign.startDate|date('M j, Y') }}</p>
                            <p><strong>End Date:</strong> {{ campaign.endDate|date('M j, Y') }}</p>
                        </div>
                        <div class="col-md-6">
                            <h5><i class="fas fa-chart-line"></i> Progress</h5>
                            <div class="mb-3">
                                <strong>Goal: €{{ campaign.goalAmount|number_format(2) }}</strong><br>
                                <strong>Collected: €{{ campaign.currentAmount|number_format(2) }}</strong>
                                <div class="progress mt-2">
                                    <div class="progress-bar bg-success" role="progressbar"
                                         style="width: {{ (campaign.currentAmount / campaign.goalAmount * 100)|round }}%">
                                        {{ (campaign.currentAmount / campaign.goalAmount * 100)|round }}%
                                    </div>
                                </div>
                            </div>
                            <p><strong>Remaining:</strong> €{{ (campaign.goalAmount - campaign.currentAmount)|number_format(2) }}</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card mt-4">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="fas fa-hand-holding-heart"></i> Recent Donations</h5>
                </div>
                <div class="card-body">
                    {% if campaign.donations|length > 0 %}
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Donor</th>
                                        <th>Amount</th>
                                        <th>Date</th>
                                        <th>Message</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for donation in campaign.donations %}
                                        <tr>
                                            <td>{{ donation.donor.firstName }} {{ donation.donor.lastName }}</td>
                                            <td>€{{ donation.amount|number_format(2) }}</td>
                                            <td>{{ donation.date|date('M j, Y') }}</td>
                                            <td>{{ donation.message ?: 'No message' }}</td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% else %}
                        <p class="text-muted">No donations yet for this campaign.</p>
                    {% endif %}
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="fas fa-plus"></i> Make a Donation</h5>
                </div>
                <div class="card-body">
                    <p>Support this campaign by making a donation today!</p>
                    <a href="{{ path('app_donation_new', {'campaign': campaign.id}) }}" class="btn btn-custom btn-block">
                        <i class="fas fa-hand-holding-heart"></i> Donate Now
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="text-center mt-3">
        <a href="{{ path('app_home') }}" class="btn btn-custom"><i class="fas fa-arrow-left"></i> Back to Dashboard</a>
    </div>
</div>
{% endblock %}