<form method="post" action="{{ path('app_campaign_delete', {'id': campaign.id}) }}" onsubmit="return confirm('Are you sure you want to delete this campaign? This action cannot be undone.');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ campaign.id) }}">
    <button class="btn btn-danger btn-sm">
        <i class="fas fa-trash"></i> Delete
    </button>
</form>