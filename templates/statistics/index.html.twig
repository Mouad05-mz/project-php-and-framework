{% extends 'base.html.twig' %}

{% block title %}Statistiques de la Plateforme{% endblock %}

{% block body %}
<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-12">
            <h1 class="mb-4 text-center">
                <i class="fas fa-chart-bar text-primary"></i> Statistiques de la Plateforme
            </h1>
            <p class="text-center text-muted">Complete overview of donations and performance of our charitable platform</p>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-md-3 mb-3">
            <div class="card border-primary shadow-sm h-100">
                <div class="card-body text-center">
                    <i class="fas fa-euro-sign fa-3x text-success mb-3"></i>
                    <h3 class="card-title text-success">{{ totals.totalCollected|number_format(2, ',', ' ') }} €</h3>
                    <p class="card-text">Montant Total Collecté</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card border-info shadow-sm h-100">
                <div class="card-body text-center">
                    <i class="fas fa-hand-holding-heart fa-3x text-info mb-3"></i>
                    <h3 class="card-title text-info">{{ totals.totalDonations }}</h3>
                    <p class="card-text">Total Number of Donations</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card border-warning shadow-sm h-100">
                <div class="card-body text-center">
                    <i class="fas fa-users fa-3x text-warning mb-3"></i>
                    <h3 class="card-title text-warning">{{ totals.totalDonors }}</h3>
                    <p class="card-text">Total Number of Donors</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card border-danger shadow-sm h-100">
                <div class="card-body text-center">
                    <i class="fas fa-bullhorn fa-3x text-danger mb-3"></i>
                    <h3 class="card-title text-danger">{{ totals.totalCampaigns }}</h3>
                    <p class="card-text">Active Campaigns</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Donations Table -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-clock"></i> Recent Donations</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>Donor</th>
                                    <th>Campaign</th>
                                    <th>Amount</th>
                                    <th>Date and Time</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for donation in recentDonations %}
                                <tr>
                                    <td>{{ donation.donor.firstName ~ ' ' ~ donation.donor.lastName }}</td>
                                    <td>{{ donation.campaign.title }}</td>
                                    <td class="text-success font-weight-bold">{{ donation.amount|number_format(2, ',', ' ') }} €</td>
                                    <td>{{ donation.date|date('d/m/Y H:i') }}</td>
                                    <td>
                                        <span class="badge bg-success">Confirmé</span>
                                    </td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Top Campaigns Table -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="fas fa-trophy"></i> Most Successful Campaigns</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>Campaign Name</th>
                                    <th>Amount Collected</th>
                                    <th>Number of Donations</th>
                                    <th>Progress</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for campaign in topCampaigns %}
                                <tr>
                                    <td>{{ campaign.campaign.title }}</td>
                                    <td class="text-success font-weight-bold">{{ campaign.totalRaised|number_format(2, ',', ' ') }} €</td>
                                    <td>{{ campaign.donationsCount }}</td>
                                    <td>
                                        <div class="progress">
                                            <div class="progress-bar bg-success" role="progressbar" style="width: {{ campaign.campaign.goalAmount > 0 ? (campaign.totalRaised / campaign.campaign.goalAmount) * 100 : 0 }}%" aria-valuenow="{{ campaign.campaign.goalAmount > 0 ? (campaign.totalRaised / campaign.campaign.goalAmount) * 100 : 0 }}" aria-valuemin="0" aria-valuemax="100">
                                                {{ campaign.campaign.goalAmount > 0 ? ((campaign.totalRaised / campaign.campaign.goalAmount) * 100)|round(1) : 0 }}%
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Top Donors Table -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0"><i class="fas fa-star"></i> Most Generous Donors</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>Donor Name</th>
                                    <th>Montant Total Donné</th>
                                    <th>Number of Donations</th>
                                    <th>Dernier Don</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for donor in topDonors %}
                                <tr>
                                    <td>{{ donor.donor.firstName ~ ' ' ~ donor.donor.lastName }}</td>
                                    <td class="text-success font-weight-bold">{{ donor.totalDonated|number_format(2, ',', ' ') }} €</td>
                                    <td>{{ donor.donationsCount }}</td>
                                    <td>{{ donor.lastDonation ? donor.lastDonation|date('d/m/Y') : 'N/A' }}</td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
