{% extends 'base.html.twig' %}

{% block title %}List of Donors{% endblock %}

{% block body %}
<div class="container animate-fade-in">
    <h1 class="mb-4 text-center"><i class="fas fa-users"></i> List of Donors</h1>
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0"><i class="fas fa-list"></i> Registered Donors</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-primary">
                        <tr>
                            <th><i class="fas fa-hashtag"></i> ID</th>
                            <th><i class="fas fa-user"></i> First Name</th>
                            <th><i class="fas fa-user"></i> Last Name</th>
                            <th><i class="fas fa-envelope"></i> Email</th>
                            <th><i class="fas fa-phone"></i> Phone</th>
                            <th><i class="fas fa-map-marker-alt"></i> Address</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for donor in donors %}
                        <tr>
                            <td>{{ donor.id }}</td>
                            <td>{{ donor.firstName }}</td>
                            <td>{{ donor.lastName }}</td>
                            <td><a href="mailto:{{ donor.email }}">{{ donor.email }}</a></td>
                            <td>{{ donor.phone ?: '<span class="text-muted">N/A</span>'|raw }}</td>
                            <td>{{ donor.address ?: '<span class="text-muted">N/A</span>'|raw }}</td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="text-center mt-4">
        <a href="{{ path('app_home') }}" class="btn btn-custom"><i class="fas fa-arrow-left"></i> Back to Dashboard</a>
    </div>
</div>
{% endblock %}
